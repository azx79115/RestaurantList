<div class="row mt-2">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Login</h1>
      {{> message}}
      <form action="/users/login" method="POST">
        <div class="mb-3">
          <label for="email" class="mb-2">Email</label>
          <input type="email" name="email" id="email" class="form-control" placeholder="Enter Email">
        </div>
        <div class="mb-3">
          <label for="password" class="mb-2">Password</label>
          <input type="password" name="password" id="password" class="form-control" placeholder="Enter Password">
        </div>
        <button type="submit" class="btn btn-primary btn-block w-100 mb-3">Login</button>
        <a href="/auth/facebook" class="btn btn-info btn-block w-100">Facebook Login</a>
      </form>
      <p class="lead mt-4 text-center">
        No Account? <a href="/users/register">Resgister</a>
      </p>
    </div>
  </div>
</div>